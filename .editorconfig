# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# 4 space indentation
[*.{py,php}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js,html,css,scss,jade,haml,rb,md,yml}]
indent_style = space
indent_size = 2

# Tab indentation
[*.otl]
indent_style = tab
